<UserControl x:Class="ControlsTest.AControlsContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ControlsCollection;Component/AControls/AButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/ControlsCollection;Component/AControls/ALabel.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#FF333333">
        <Button Content="Button" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="button1" VerticalAlignment="Top" Width="75" Foreground="White" />
        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="93,12,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</UserControl>
